<h1>Tasks#index</h1>
<div class="container">
  <% @tasks.each_with_index do |t, i| %>
    <div class="row">
      <div class="col-sm-1">
        <%= i + 1 %>.
      </div>
      <div class="col-sm-2">
        <%= t.title %>
      </div>
      <div class="col-sm-2">
        <%= t.description %>
      </div>
      <div class="col-sm-1">
        <%= t.status ? "done" : "TBC" %>
      </div>
      <div class="col-sm-2">
        <%= link_to "show", task_path(t) %>
      </div>
      <div class="col-sm-2">
        <%= link_to "edit", edit_task_path(t) %>
      </div>
      <div class="col-sm-2">
        <%= link_to "delete", task_path(t),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  <% end %>
  <%= link_to 'new task', new_task_path %>
</div>
